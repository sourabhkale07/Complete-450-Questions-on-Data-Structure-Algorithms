#include <iostream>
#include<algorithm>

using namespace std;

int main()
{
    int n,k;
    cin>>n;
    
    int arr[n];
    
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    
    int count=0;
    
    for(int i=0;i<n;i++){
        k = arr[i];
        i+=k;
        count++;
        if(i>=n-1){
            break;
        }
        
    }
    cout<<count<<endl;
    
   
    
    return 0;
}
